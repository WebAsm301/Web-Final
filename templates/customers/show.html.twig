{% extends 'base.html.twig' %}

{% block title %}Customers show{% endblock %}

{% block body %}
  <h1>Cusomer show</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ customers.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{  customers.Customername }}</td>
    </tr>
    <tr>
      <th>Birth Day</th>
      <td>{{ customers.Birthday|date('d-m-Y') }}</td>
    </tr>
  </table>

  <ul>
    <ul>
      <button><a href="{{ path('app_customers_index') }}">Back to the list</a></button>
    </ul>
    <ul>
      <button><a href="{{ path('app_customers_edit', { 'id': customers.id }) }}">Edit</a></button>
    </ul>
    <ul onclick = "return confirm('Are u sure u want to delete?')">
      {{ form_start(delete_form) }}
      <input type="submit" value="Delete">
      {{ form_end(delete_form) }}
    </ul>
  </ul>
{% endblock %}