{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
  <h1>products</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ products.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ products.name }}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ products.Description }}</td>
    </tr>
    <tr>
      <th>Price</th>
      <td>{{ products.price }}</td>
    </tr>
    <tr>
      <th>Quantity</th>
      <td>{{ products.quantity }}</td>
    </tr>
    <tr>
      <th>Status</th>
      <td>{{ products.Status }}</td>
    </tr>
    </tbody>
  </table>

  <ul>
    <ul>
      <button><a href="{{ path('app_products_index') }}">Back to the list</a></button>
    </ul>
    <ul>
      <button><a href="{{ path('app_products_edit', { 'id': products.id }) }}">Edit</a></button>
    </ul>
    <ul onclick = "return confirm('Are u sure u want to delete?')">
      {{ form_start(delete_form) }}
      <input type="submit" value="Delete">
      {{ form_end(delete_form) }}
    </ul>
  </ul>
{% endblock %}
