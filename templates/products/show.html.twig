{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
  <h1>Product</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ product.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ product.name }}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ product.Description }}</td>
    </tr>
    <tr>
      <th>Price</th>
      <td>{{ product.price }}</td>
    </tr>
    <tr>
      <th>Quantity</th>
      <td>{{ product.quantity }}</td>
    </tr>
    <tr>
      <th>Status</th>
      <td>{{ product.Status }}</td>
    </tr>
    </tbody>
  </table>

  <ul>
    <ul>
      <button><a href="{{ path('app_products_index') }}">Back to the list</a></button>
    </ul>
    <ul>
      <button><a href="{{ path('app_products_edit', { 'id': product.id }) }}">Edit</a></button>
    </ul>
    <ul onclick = "return confirm('Are u sure u want to delete?')">
      {{ include('products/_delete.html.twig') }}
    </ul>
  </ul>
{% endblock %}
