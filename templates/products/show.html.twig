{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
  <h1>products</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ products.id }}</td>
    </tr>
        <tr>
      <th>Supplier</th>
      <td>{{ products.suppliers.Suppliername }}</td>
    </tr>
    <tr>
      <th>Book</th>
      <td>{{ products.suppliers.books.bookname }}</td>
    </tr>
    <tr>
      <th>Price</th>
      <td>{{ products.price }}$</td>
    </tr>
    </tbody>
  </table>

  <ul>
    <ul>
      <button><a href="{{ path('app_products_index') }}">Back to the list</a></button>
    </ul>
    <ul>
      <button><a href="{{ path('app_products_edit', { 'id': products.id }) }}">Edit</a></button>
    </ul>
    <ul onclick = "return confirm('Are u sure u want to delete?')">
      {{ form_start(delete_form) }}
      <input type="submit" value="Delete">
      {{ form_end(delete_form) }}
    </ul>
  </ul>
{% endblock %}