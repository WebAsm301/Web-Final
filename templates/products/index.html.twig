{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.Name }}</td>
                <td>{{ product.Description }}</td>
                <td>{{ product.Price }}</td>
                <td>
                    <button><a href="{{ path('app_products_show', {'id': product.id}) }}" class="btn btn-success">show</a></button>
                    <button><a href="{{ path('app_products_edit', {'id': product.id}) }}" class="btn btn-warning">edit</a></button>
                    
                    <form method="post" action="{{ path('app_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <button><input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">Delete</button>
                    
                    </form>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul><a href="{{ path('app_products_new') }}" class="btn btn-primary">Create new</a></ul>
{% endblock %}
