{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.productName}}</td>
                <td>{{ product.Price }}$</td>
                <td>
                    <button><a href="{{ path('app_products_show', {'id': product.id}) }}" class="btn btn-success">show</a></button>
                    <button><a href="{{ path('app_products_edit', {'id': product.id}) }}" class="btn btn-warning">edit</a></button>
                    <button class="delete_btn"><a href="{{ path('app_products_delete', {'id': product.id}) }}" class='btn btn-danger' onclick = "return confirm('Are u sure u want to delete?')">Delete</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
