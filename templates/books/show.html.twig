{% extends 'base.html.twig' %}

{% block title %}Books show{% endblock %}

{% block body %}
  <h1>Book show</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ books.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{  books.Bookname }}</td>
    </tr>
  </table>

  <ul>
    <ul>
      <button><a href="{{ path('app_books_index') }}">Back to the list</a></button>
    </ul>
    <ul>
      <button><a href="{{ path('app_books_edit', { 'id': books.id }) }}">Edit</a></button>
    </ul>
    <ul onclick = "return confirm('Are u sure u want to delete?')">
      {{ form_start(delete_form) }}
      <input type="submit" value="Delete">
      {{ form_end(delete_form) }}
    </ul>
  </ul>
{% endblock %}