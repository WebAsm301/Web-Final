{% extends 'base.html.twig' %}

{% block title %}Suppliers{% endblock %}

{% block body %}
    <h1>Suppliers</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <th>SupplierName</th>
                <th>SupplierNation</th>
                <th>actions</th>
            </tr>
        </tbody>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.id }}</td>
                <td>{{ supplier.SupplierName }}</td>
                <td>{{ supplier.SupplierNation }}</td>
                <td>
                    <a href="{{ path('app_suppliers_show', {'id': supplier.id}) }}" class="btn btn-success">show</a>
                    <a href="{{ path('app_suppliers_edit', {'id': supplier.id}) }}" class="btn btn-warning">edit</a>
                    <a href="{{ path('app_suppliers_delete', {'id': supplier.id}) }}" class="btn btn-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_suppliers_new') }}">Create new</a>
{% endblock %}