{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
    <h1>Orders index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Delivery</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.Date ? order.Date|date('Y-m-d') : '' }}</td>
                <td>{{ order.Delivery ? order.Date|date('Y-m-d') : '' }}</td>
                <td>{{ order.Status }}</td>
                <td><a href="{{ path('app_orders_show', {'id': order.id}) }}" class="btn btn-success">show</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
